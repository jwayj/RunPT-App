<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31"
        tools:replace="android:allowBackup">
        <activity
            android:name=".SecondActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".Badge"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_badge"
            android:theme="@style/Theme.MyApplication.Fullscreen" />
        <activity
            android:name=".Signup3"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_signup3"
            android:theme="@style/Theme.MyApplication.Fullscreen" />
        <activity
            android:name=".Signup1"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_signup1"
            android:theme="@style/Theme.MyApplication.Fullscreen" />
        <activity
            android:name=".Signup2"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_signup"
            android:theme="@style/Theme.MyApplication.Fullscreen" />
        <activity
            android:name=".Login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MapActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication" />
        <activity
            android:name=".SearchPopup"
            android:exported="false"
            android:launchMode="singleTop"
            android:theme="@style/Theme.MyApplication"
            android:windowBackground="@android:color/transparent"
            android:windowIsTranslucent="true"
            android:windowSoftInputMode="adjustResize" /> <!-- 앱 실행 시 가장 먼저 열릴 화면을 popup으로 변경 -->
        <activity
            android:name=".popup"
            android:exported="true"
            android:theme="@style/Theme.MyApplication"/>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MyApplication" />


    </application>

</manifest>